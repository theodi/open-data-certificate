.flash.alert{ :class => "alert-#{type}", 'data-dismiss' => "alert" }
  - if type.to_s == 'alert'
    %i.icon-exclamation-sign.icon-large.icon-white
  - if type.to_s == 'notice'
    %i.icon-ok-sign.icon-large.icon-white
  - if type.to_s == 'warning'
    %i.icon-info-sign.icon-large.icon-white

  %button.icon-remove{:type => "button", 'data-dismiss' => "alert"}

  = flash.html_safe
