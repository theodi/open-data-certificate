%section
  %h1 Certificates
  = form_tag(search_certificates_path, :method => :post) do
    %div.form-search
      = label_tag :search, "Search for:"
      = text_field_tag :search, @search
      = submit_tag 'Go', :class => 'btn'

  - if @certificates.any?
    %table.table.table-striped
      %thead
        %tr
          %th Certificate
          %th Dataset
          %th Survey
        %tbody
        - @certificates.each do |certificate|
          %tr
            %td= link_to certificate.name, certificate
            %td= certificate.response_set.dataset.title
            %td= certificate.response_set.survey.title
  - else
    %p No certificates found
