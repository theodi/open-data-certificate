- content_for(:body_class) {'odi-bleed'}

- content_for(:super_head) do
  #padd{style: 'height:500px;'}
    .container
      .row
        .span4.offset8
          %h1= t('homepage.title')
          %h2= t('homepage.tagline')
          = form_tag non_authenticated_start_questionnaire_path do
            %button.btn.btn-large.btn-primary= t('homepage.start_new_certificate')
          %a.btn.btn-large.btn-info{href: certificates_path}= t('homepage.browse_all_new_certificates')

- content_for(:header) do
  #empty

  %header.home
    .container
      .row
        .span12
          %h1= t('homepage.how_it_works')
      .row
        .span4
          %h2
            1
            %small= t('homepage.fill_out_questionnaire.title')
          %p= t('homepage.fill_out_questionnaire.description')
          = form_tag non_authenticated_start_questionnaire_path do
            %button.btn.btn-large.btn-primary= t('homepage.start_new_certificate')

        .span4
          %h2
            2
            %small= t('homepage.generate_certificate.title')
          %p= t('homepage.generate_certificate.description')
        .span4.last
          %h2
            3
            %small= t('homepage.share_open_data.title')
          %p= t('homepage.share_open_data.description')
.container.main
  .row
    .span6
      %iframe{width: 560, height: 315, src: 'http://www.youtube.com/embed/MRZE6X-ZG6Q', frameborder: 0, allowfullscreen: 'allowfullscreen'}
    .span6
      %h2= t('homepage.about_certificate.title')
      %p= t('homepage.about_certificate.description')
      %h2= t('homepage.about_odi.title')
      %p= t('homepage.about_odi.description')
