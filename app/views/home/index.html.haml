- content_for(:body_class) {'odi-bleed'}

- content_for(:super_head) do
  #padd{style: 'height:500px;'}
    .container
      .row
        .span4.offset8
          %h1= t('homepage.title')
          %h2= t('homepage.tagline')
          = new_certificate_link({role: 'button', class: ['btn', 'btn-large', 'btn-primary'], link_text: t('homepage.start_new_certificate')})
          = link_to t('homepage.browse_all_new_certificates'), certificates_path, class: ['btn', 'btn-large', 'btn-info']

- content_for(:header) do
  #empty

  %header.home
    .container
      .row
        .span12
          %h1= t('homepage.how_it_works')
      .row.steps
        .span4
          %h2
            1
            %small= t('homepage.fill_out_questionnaire.title')

          %p= t('homepage.fill_out_questionnaire.description')

        .span4
          %h2
            2
            %small= t('homepage.generate_certificate.title')
          %p= t('homepage.generate_certificate.description')

        .span4.last
          %h2
            3
            %small= t('homepage.share_open_data.title')
          %p= t('homepage.share_open_data.description')

.container.home-header-buttons
  .row
    .span4
      = new_certificate_link({role: 'button', class: ['btn', 'btn-large', 'btn-primary'], link_text: t('homepage.start_new_certificate')})
    .span4
      %p.logo ODI
    .span4
      = link_to t('homepage.browse_certificates'), certificates_path, class: ['btn', 'btn-large', 'btn-primary']

.container.main
  .row
    .span6
      %iframe{width: 560, height: 315, src: 'http://www.youtube.com/embed/MRZE6X-ZG6Q', frameborder: 0, allowfullscreen: 'allowfullscreen'}
    .span6.homepage-about-content
      %h2.about-certificate
        = link_to t('homepage.about_certificate.title'), certificates_path
      %p.about-certificate= t('homepage.about_certificate.description')
      = link_to t('homepage.about_certificate.link'), certificates_path, class: ['about-certificate']
      %h2.about-odi
        = link_to t('homepage.about_odi.title'), '/contact'
      %p.about-odi= t('homepage.about_odi.description')
      = link_to t('homepage.about_odi.link'), '/contact', class: ['about-odi']
